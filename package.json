{
  "name": "sneakers",
  "version": "1.0.0",
  "description": "Sneaker City is a brand new online-only store for sneaker enthusiasts.\nThis isn’t your average e-commerce shop – it’s a curated experience that shows just the latest in sneaker trends.",
  "engines": {
    "node": ">=12.x"
  },
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/server.js",
    "build": "babel src --extensions .js,.ts --out-dir dist",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|js|json)\"",
    "format:check": "prettier --ignore-path .gitignore --list-different \"**/*.+(ts|js|json)\"",
    "sequelize": "./node_modules/.bin/sequelize $*",
    "db:create": "npm run sequelize db:create",
    "db:drop": "npm run sequelize db:drop",
    "db:migrate": "npm run sequelize db:migrate",
    "db:migrate:reset": "npm run sequelize db:migrate:undo:all",
    "db:seed": "npm run sequelize db:seed:all",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed",
    "test": "cross-env NODE_ENV=test jest --coverage --forceExit --detectOpenHandles  --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles  --runInBand --watchAll",
    "test:ci": "npm run db:reset:migrate:seed:test && CI=true cross-env NODE_ENV=test jest --forceExit --detectOpenHandles  --runInBand",
    "db:reset:migrate:seed:test": "cross-env NODE_ENV=test npm run db:reset",
    "coveralls": "jest --coverage && coveralls < coverage/lcov.info",
    "docker": "docker-compose up --force-recreate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frankhn/sneakers-city.git"
  },
  "keywords": [
    "sneakers"
  ],
  "author": "Frank Harerimana",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frankhn/sneakers-city/issues"
  },
  "homepage": "https://github.com/frankhn/sneakers-city#readme",
  "dependencies": {
    "celebrate": "^12.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.8.28",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.2.1",
    "sequelize": "^5.21.13",
    "swagger-ui-express": "^4.1.4",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/async": "^3.2.3",
    "@types/bluebird": "^3.5.32",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/supertest": "^2.0.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-watch": "^7.0.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-json": "^2.1.1",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  }
}